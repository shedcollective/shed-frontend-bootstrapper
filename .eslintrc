{
    "plugins": [
        "vue"
    ],
    "extends": [
        'eslint:recommended',
        'plugin:vue/recommended',
    ],
    "env": {
        "browser": true,
        "jquery": true,
        "es6": true,
        "node": true,
    },
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-trailing-spaces": "error",
        "valid-jsdoc": "error",
        "brace-style": "error",
        "keyword-spacing": "error",
        "space-before-function-paren": ["error", "never"],
        "no-console": 0,
        # Vue specific stylings
        "vue/html-indent": ["warn", 4],
        "vue/v-bind-style": ["warn", "longform"],
        "vue/v-on-style": ["warn", "longform"]
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "globals": {
        "axios": false,
        "jQuery": false,
        "_" : false,
    }
}
